{{>layout/header}}
<div class="col-md-4">
    <form action="/users/addr" method="post">
        <div class="form-group">
            <label for="addrNic">배송지명</label>
            <input type="text" class="form-control" id="addrNic" placeholder="배송지명">
        </div>
        <div class="form-group">
            <label for="addrName">수령인</label>
            <input type="text" class="form-control" id="addrName" placeholder="수령인">
        </div>
        <div class="form-group">
            <label for="addrZip">우편번호</label>
            <input type="text" class="form-control" id="addrZip" placeholder="우편번호">
        </div>
        <div class="form-group">
            <label for="addrBas">기본주소</label>
            <input type="text" class="form-control" id="addrBas" placeholder="기본주소">
        </div>
        <div class="form-group">
            <label for="addrDet">상세주소</label>
            <input type="text" class="form-control" id="addrDet" placeholder="상세주소">
        </div>
        <div class="form-group">
            <label for="addrNum">연락처</label>
            <input type="text" class="form-control" id="addrNum" placeholder="연락처">
        </div>
        <div class="form-group">
            <label for="secNum">연락처2</label>
            <input type="text" class="form-control" id="secNum" placeholder="연락처2">
        </div>
        <div>
            <label for="addrYN">기본배송지</label>
            <input type="checkbox" class="form-control" id="addrYN" value="Y"> 기본 배송지로 설정
        </div>
    </form>
    <a href="/" role="button" class="btn btn-secondary">취소</a>
    <button type="button" class="btn btn-primary" id="btn-addrSave">저장</button>

</div>
{{>layout/footer}}