{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="d-flex flex-column mx-auto col col-lg-5">
        <form action="/users/signUp" method="post">
            <div class="form-group">
                <label for="id">아이디</label>
                <input type="text" class="form-control" id="id" placeholder="아이디를 입력하세요">
            </div>
            <div class="form-group">
                <label for="pw">비밀번호</label>
                <input type="password" class="form-control" id="pw" placeholder="비밀번호를 입력하세요">
            </div>
            <div class="form-group">
                <label for="name"> 이름 </label>
                <input type="text" class="form-control" id="name" placeholder="이름을 입력하세요">
            </div>
            <div class="form-group">
                <label for="sex"> 성별 </label>
            </div>
            <div class="form-group row ml-4">
                <div class="mr-3">
                    <input type="radio" name="sex" placeholder="남자" value="남자"> 남자
                </div>
                <div>
                    <input type="radio" name="sex" placeholder="여자" value="여자"> 여자
                </div>
            </div>
            <div class="form-group">
                <label for="num"> 전화번호 </label>
                <div class="ml-4">
                    <input type="text" style="width:75px; border: 1px solid #ced4da; border-radius: .25rem;" name="num" placeholder="000">-
                    <input type="text" style="width:75px; border: 1px solid #ced4da; border-radius: .25rem;" name="num" placeholder="0000">-
                    <input type="text" style="width:75px; border: 1px solid #ced4da; border-radius: .25rem;" name="num" placeholder="0000">
                </div>
            </div>
            <div class="form-group">
                <label for="mail"> 메일 </label>
                <input type="email" class="form-control" id="mail" placeholder="메일주소를 입력하세요">
            </div>
            <div class="form-group">
                <label for="nic_Name"> 닉네임 </label>
                <input type="text" class="form-control" id="nic_Name" placeholder="닉네임을 입력하세요">
            </div>
        </form>
        <div>
            <a href="/" role="button" class="btn btn-secondary">취소</a>
            <button type="button" class="btn btn-primary" id="btn-save">회원가입완료</button>
        </div>

    </div>
</div>
<script src="/js/app/users.js"></script>
{{>layout/footer}}
