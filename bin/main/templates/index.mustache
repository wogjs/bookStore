{{>layout/header}}
{{>layout/nav}}
<div class="container">
    <div class="d-flex flex-row justify-content-end">
        {{#master}}
            <a class="btn btn-outline-primary" href="/books/bookInsert"  class="btn btn-primary">도서등록</a>
        {{/master}}
    </div>
    <div class="d-flex flex-row flex-wrap justify-content-around align-content-around">
        {{#bookInfo}}
            <div class="card mt-5" style="width: 20rem">
                <div class="card-body">
                    <p class="text-center" style="font-size:5px; text-align:center;">[{{bookGen}}]</p>
                    <h5 class="card-title text-center">{{bookName}}</h5>
                    <p class="card-text text-right" name="money">가격 : {{bookPri}}</p>
                    <a href="/books/bookInfo/{{isbn}}" class="btn btn-outline-secondary btn-sm float-right">상세보기</a>
                </div>
            </div>
        {{/bookInfo}}
    </div>
</div>
<script>
    let money = document.getElementsByName("money");
    Array.from(money).forEach((item,index) => {
        item.innerHTML = item.innerHTML.replace(/\B(?=(\d{3})+(?!\d))/g, ",")+"원";
    })
</script>
